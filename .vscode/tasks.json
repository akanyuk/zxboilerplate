{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make run",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    //"PROJECT_NAME": "project_name",
                    "EMULATOR_BINARY": "xpeccy",
                    "COPY_SNAPSHOT_TO": "/tmp/quicksave.sna"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false,
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": "$errmatcher-sjasmplus"
        }
    ]
}

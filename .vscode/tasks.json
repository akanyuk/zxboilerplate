{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SjASMPlus",
            "type": "shell",
            "command": "${workspaceFolder}/_sjasmplus/sjasmplus",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "--nologo",
                "main.asm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false,
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": "$errmatcher-sjasmplus"
        }
    ]
}